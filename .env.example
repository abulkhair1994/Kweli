NEO4J_USER=neo4j
NEO4J_PASSWORD=password123
NEO4J_DATABASE=neo4j

# ETL Configuration
ETL_CHUNK_SIZE=10000
ETL_BATCH_SIZE=1000
ETL_MAX_WORKERS=4

# Data Paths
DATA_RAW_PATH=data/raw
DATA_LOGS_PATH=data/logs
